<%# app/views/restaurants/leaderboard.html.erb %>

<div class="container">
  <h1 class="display-4 mb-4">Taco Restaurant Leaderboard</h1>
  <div class="row">
    <% @restaurants.each_with_index do |restaurant, index| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h3 class="card-title"><%= restaurant.name %></h3>
              <div class="position-relative">
                <div class="position-absolute top-0 start-50 translate-middle">
                  <h2 class="text-primary">#<%= index + 1 %></h2>
                </div>
              </div>
            </div>

            <div class="d-flex align-items-center mb-3">
              <div class="rating">
                <%= restaurant.google_rating %>â˜…
              </div>
              <div class="ms-3">
                 <span class="badge bg-primary">
                   <%= restaurant.google_price_level.nil? ? 'N/A' : "#{restaurant.google_price_level} #{'ğŸ’°' * restaurant.google_price_level}" %>
                 </span>
              </div>
            </div>

            <p class="card-text">
              <%= restaurant.street_address %><br>
              <% avg_price = restaurant.tacos.average(:price_cents) %>
              <%= avg_price ? number_to_currency(avg_price / 100.0, precision: 2) : 'N/A' %> average price
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <%= pluralize(restaurant.tacos.count, 'taco') %> available
              </small>
              Details
              <%= link_to "View Restaurant",  restaurant_path(restaurant), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
