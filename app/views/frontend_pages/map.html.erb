    </section>

    <!-- Restaurant List -->
    <div class="row">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="container">
              <div class="row">
                <div class="card">
                <div class="container">

                  <div class="col-12">
                    <div class="container">
                      <div class="card-header">
                        <h5 class="card-title mb-0">Taco Places</h5>
                        <%= link_to 'Add a Restaurant', new_restaurant_path, class: 'btn btn-primary my-3' %>
                      </div>
                    </div>
